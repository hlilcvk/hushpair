# ============================================
# PRODUCTION ENVIRONMENT VARIABLES
# ============================================
# Bu dosyayı Coolify'da Environment Variables olarak ekleyeceksin

# DATABASE (Coolify PostgreSQL)
DATABASE_URL=postgresql://hushpair:CHANGE_PASSWORD@postgres:5432/hushpair?schema=public

# REDIS (Coolify Redis)
REDIS_URL=redis://:CHANGE_REDIS_PASSWORD@redis:6379
REDIS_PASSWORD=CHANGE_REDIS_PASSWORD

# POSTGRES
POSTGRES_DB=hushpair
POSTGRES_USER=hushpair
POSTGRES_PASSWORD=CHANGE_PASSWORD

# SECURITY (ÇOK ÖNEMLİ - RANDOM STRING KULLAN!)
JWT_SECRET=PRODUCTION_JWT_SECRET_MIN_32_CHARS_RANDOM_STRING
ENCRYPTION_KEY=PRODUCTION_AES_256_KEY_32_BYTES_EXACTLY_RANDOM

# SERVER
PORT=3000
NODE_ENV=production

# CORS (Coolify domain'ini buraya yaz)
ADMIN_PANEL_URL=https://admin.hushpair.com

# API KEYS (Admin Panel'den gireceksin)
GOOGLE_MAPS_API_KEY=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
FCM_SERVER_KEY=
FACETEC_DEVICE_KEY_IDENTIFIER=
STRIPE_SECRET_KEY=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET_NAME=
AWS_REGION=eu-central-1

# FEATURE TOGGLES
FACE_VERIFICATION_ENABLED=true
PAYMENT_ENABLED=false
SMS_ENABLED=true

# APP CONFIGURATION
APP_DAILY_CONNECTION_LIMIT=5
APP_DAILY_VIEW_LIMIT=15
APP_TIME_BANK_HOURS=48
APP_RED_ROOM_DESTRUCT_HOURS=5
APP_STAR_POOL_EXPIRY_DAYS=7
APP_MAX_DISTANCE_KM=50

# ADMIN
ADMIN_DEFAULT_EMAIL=admin@hushpair.com
ADMIN_DEFAULT_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
